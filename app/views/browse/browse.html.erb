
<div class="row">

  <div id="rcorners1" class="col-md-4 round" style="background:#272727">
    <%= render "layouts/profile_bar" %>

    <ul class="nav nav-tinder-sidebar ml-4 mt-3 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true" style="color:green; font-size:120%">Messages</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-profile" aria-selected="false" style="color:green; font-size:120%">Liked Projects</a>
      </li>
    </ul>

    <div class="tab-content" style="color:white" id="pills-tabContent">
      <div class="tab-pane ml-2 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="col">
          <%= render "browse/matches" %>
        </div>
      </div>
      <div class="tab-pane ml-2 fade" style="color:white" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <%= render partial: "liked_projects/list" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-9 col-md-8" style="margin-top:0px">


    <img class="logo" src=<%=asset_path('hello.PNG')%> >

    <ul id="slides">
      <% @reccommended_projects.each do |project| %>
      <div class="slide " style="color:white;" data-id="<%= project.id %>">
        <h1 class="font-weight-bolder" style="color:white;  font-size:50%;"><%= project.title %></h1>
        <div style="margin-top:20px">
          <p style="font-size:40%; line-height:40px"> Skill(s) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= project.skills %> </p>
        </div>
        <div style="margin-top:20px">
          <p style="font-size:40%; line-height:40px"> Category &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= project.category %> </p>
        </div>
        <div style="margin-top:20px">
          <p class="content" style="font-size:40%; line-height:40px; text-overflow: ellipsis"> Description &nbsp;&nbsp;: <%= project.description %> </p>
        </div>
      </div>
      <% end %>

      <div id="slide-controls" style="z-index:1; position:absolute; margin-left:29%; margin-top:40%" >
        <div id="decline" class="d-inline-block fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-white"></i>
          <i class="fa fa-times fa-stack-1x text-danger"></i>
        </div>
        <div id="approve" class="d-inline-block fa-stack fa-4x">
          <i class="fa fa-circle fa-stack-2x text-white"></i>
          <i class="fa fa-heart fa-stack-1x text-success"></i>
        </div>
    </ul>

    <!-- dont delete! -->
    <div class="container">
    <div id="conversation"></div>
    </div>

    </div>
</div>
