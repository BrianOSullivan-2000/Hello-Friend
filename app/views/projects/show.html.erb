
<body style="margin-left:10%; margin-top:5%; color:white">

  <p id="notice"><%= notice %></p>

  <h1 style="color:white">
    <strong>Title:</strong>
    <%= @project.title %>
  </h1>

  <h3 style="color:white; line-height:40px">
    <strong>Description:</strong>
    <%= @project.description %>
  </h3>

  <h4 style="color:white; line-height:40px">
    <strong>Skills:</strong>
    <%= @project.skills %>
  </h4>

  <h4 style="color:white; line-height:40px">
    <strong>Category:</strong>
    <%= @project.category %>
  </h4>

  <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-outline-warning" %>
  <%= link_to 'Projects', projects_path, class: "btn btn-outline-primary" %>

