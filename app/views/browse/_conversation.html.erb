<div class="row">
  <div class="col-12 top-bar">
    <i class="fa fa-times fa-2x text-muted float-right" id="close-conversation"></i>
    <% if @our_project_bool %>
    <p class="text-muted mt-2">You have connected with <%= @liked_project.title %> on <%= @like.created_at.strftime("%d/%m/%Y") %>.</p>
    <p class="text-muted mt-2">Show your interest!</p>
    <% else %>
    <p class="text-muted mt-2">You have connected with <%= @profile.first_name %> on <%= @like.created_at.strftime("%d/%m/%Y") %>.</p>
    <% end %>
  </div>
</div>
<div class="row text-light" >
  <div class="col-12">
    <% if @conversation.new_record? %>
      <div id="initiate-conversation" class="text-center">
        <p class="mt-3">You connected with <span><%= @profile.first_name %></span> <%= time_ago_in_words @like.created_at %> ago</p>

        <p>{ Hello, friend! }</p>
      </div>
    <% end %>

    <div id="conversation_messages"><%= render partial: "browse/messages" unless @conversation.new_record? %></div>
  </div>
</div>
<div class="row">
  <div class="col-12 mt-5 bottom-bar">
    <%= render partial: "browse/new_conversation" %>
  </div>
</div>
