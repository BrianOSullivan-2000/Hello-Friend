<div>
<img src=<%=asset_path('hello.PNG')%> height="60">
</div>
<div class="row">

  <div class="col-md-4 bg-white">
    <%= render "layouts/profile_bar" %>

    <ul class="nav nav-tinder-sidebar ml-4 mt-3 mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Matches</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-messages" role="tab" aria-controls="pills-profile" aria-selected="false">Messages</a>
      </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane ml-2 fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <%= render "browse/matches" %>
      </div>
      <div class="tab-pane ml-2 fade" id="pills-messages" role="tabpanel" aria-labelledby="pills-profile-tab">
        <div class="col">
          <%= render partial: "conversations/list" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-9 col-md-8">
    <ul id="slides">
      <% @projects.each do |project| %>
      <div class="slide" data-id="<%= project.id %>">
        <li style="color:white"><%= project.title %></li>
      </div>-
      <% end %>
    </ul>


    <div id="slide-controls">
      <div id="decline" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-times fa-stack-1x text-danger"></i>
      </div>
      <div id="approve" class="d-inline-block fa-stack fa-2x">
        <i class="fa fa-circle fa-stack-2x text-white"></i>
        <i class="fa fa-heart fa-stack-1x text-success"></i>
      </div>
    </div>

    <div id="conversation">
<%= link_to "Sign out", destroy_account_session_path, method: :delete, class: "btn btn-secondary mr-2" %>
    </div>
  </div>
</div>
