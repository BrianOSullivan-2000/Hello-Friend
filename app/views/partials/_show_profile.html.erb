<div class="card text-white bg-success mt-proj" align="center">

  <div class="card-header" align="left">
    <span class="dg-bold"><%= @profile.name %></span>
    <%= link_to "Back to Browsing", browse_path, class: "float-right dg" %>
  </div>
  <div class="card-body lgb">
    <div class="white-text mb-3"> About <%= @profile.name %> </div>
    <% if @profile.profile_pic.attached? %>
      <%= image_tag @profile.profile_pic, class: "prof-image" %>
    <% end %>
    <p class="card-text"> <br/><%= markdown @profile.bio %></p>
    <% replacements = {
        '[' => '', ']' => '',
        '/' => '', '"' => ''} %>
    <p class="card-text"><span class="white-text"> Skills: </span> <%= @profile.skills.gsub(Regexp.union(replacements.keys), replacements)[2..-1] %></p>
  </div>
</div>
<% if current_account.id==@profile.account_id %>
<%= link_to "Edit", edit_profile_path(@profile), class: "proj-links" %>
<% end %>
