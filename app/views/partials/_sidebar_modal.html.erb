<div class="row">
<div class="col-12">
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#ModalCenter">
  My Projects and Likes
</button>
</div>
<div class="col-12 mt-2" style="margin-bottom: 35px;">
<%= link_to destroy_account_session_path, method: :delete, :class=> "off-icon" do %>
    <i class="fa fa-power-off "></i>
<% end %>
</div>
</div>

<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header bg-success">
        <% if !current_account.profile.nil? %>
        <%= link_to @my_profile.name.upcase, @my_profile, class: "dg-bold" %>
        <% end %>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12" align="left">
              <%= render partial: "partials/liked_projects" %>
          </div>
        </div>
        <div class="row">
          <div class="col-12" align="left">
              <%= render partial: "partials/my_projects" %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
