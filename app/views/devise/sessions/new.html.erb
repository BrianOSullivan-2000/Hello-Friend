<img class="fade-in" src=<%=asset_path('hello.PNG')%> width="500">

<style>
  body {
  background:#171717;
}
</style>

<body id="signin" style="color:white" class="center fade-in">
  <div style="color:green">
    <h1 id="signinthing">Sign in</h1>
  </div>

  <div class="field">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field" style="margin-top:35px">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="color:grey">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</body>
